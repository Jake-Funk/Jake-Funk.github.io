---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";
import { render } from "astro:content";

interface Props {
  data: CollectionEntry<"projects">;
}

const { data: proj } = Astro.props;
const { Content } = await render(proj);

const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/*.{png,mp4}",
);
proj.data.images.forEach((path) => {
  if (!images[path])
    throw new Error(
      `"${path}" does not exist in glob: "src/assets/*.{png,mp4}"`,
    );
});
---

<li class="p-0">
  <h2 class="mb-0">{proj.data.title}</h2>
  <p>{proj.data.stack}</p>
  <Content />
  <div class="carousel space-x-4">
    {
      proj.data.images.map((img) => {
        return (
          <div class="carousel-item w-full">
            {img.endsWith(".mp4") ? (
              <video
                width={1020}
                height={510}
                src={img}
                autoplay
                muted
                loop
                class="m-auto rounded-lg"
              />
            ) : (
              <Image
                width={1020}
                height={510}
                src={images[img]()}
                alt="project screenshot"
                class="m-auto rounded-lg"
              />
            )}
          </div>
        );
      })
    }
  </div>
</li>
